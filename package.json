{
  "name": "trail-forward",
  "version": "1.0.0",
  "description": "A website for hiking group composed of and designed to support people with lived experience of incarceration, drug addiction, and homelessness.",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node app.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "tsc --project tsconfig.client.json",
    "build:server": "tsc --project tsconfig.server.json",
    "dev": "tsc --watch",
    "clean": "rm -rf public/js && rm -rf database && rm app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/r3lic-pnw/trail-forward.git"
  },
  "keywords": [
    "trail-forward",
    "hiking",
    "reentry",
    "support"
  ],
  "author": "Jarrell Quincy | r3lic",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/r3lic-pnw/trail-forward/issues"
  },
  "homepage": "https://github.com/r3lic-pnw/trail-forward#readme",
  "dependencies": {
    "express": "^5.1.0",
    "mysql2": "^3.14.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.10",
    "typescript": "^5.8.3"
  }
}